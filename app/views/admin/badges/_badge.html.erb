<tr>
  <td class="align-middle">
    <%= content_tag :span, badge.title, class: 'test-title', data: { badge_id: badge.id } %>
  </td>
  <td class="align-middle"><%= badge.image_url %></td>
  <td class="align-middle"><%= badge.condition %></td>
  <td class="align-middle"><%= link_to  t('.show'), admin_badge_path(badge) %></td>
  <td class="align-middle">
    <%= link_to t('.edit'), edit_admin_badge_path(badge) %>
  </td>
  <td class="align-middle">
    <%= link_to "Delete",
                admin_badge_path(badge),
                method: :delete,
                data:   { confirm: t('.are_you_sure') } %>
  </td>
</tr>
