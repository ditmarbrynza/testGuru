<h1><%= t('.pass_the_test', test_title: @test_passage.test.title ) %></h1>

<b>
  <%= @test_passage.current_question.body %>
</b>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body, include_hidden:
  false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end %>

  <p><%= form.submit 'Next' %></p>
<% end %>

<div>
  <%= t('.current_question') %> <%= @test_passage.test.question_number(@test_passage.current_question) %> of <span class="all_questions"><%= @test_passage.test.questions.count.to_i %> </span>
</div>
